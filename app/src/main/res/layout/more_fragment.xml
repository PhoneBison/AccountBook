<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="60.0dip">

        <View
            style="@style/hLine"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:paddingTop="40.0dip" />

        <LinearLayout
            android:id="@+id/safe_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="safe_setting"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:background="@drawable/icon_security" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15.0dip"
                android:text="@string/safe_setting"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            style="@style/hLine"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:background="@drawable/icon_recommand" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15.0dip"
                android:text="清除手势密码"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            style="@style/hLine"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/import_and_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="import_and_export"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:background="@drawable/icon_export_import" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15.0dip"
                android:text="@string/import_and_export"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            style="@style/hLine"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="about"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:background="@drawable/icon_about" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15.0dip"
                android:text="@string/about"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            style="@style/hLine"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" />
    </LinearLayout>


</LinearLayout>